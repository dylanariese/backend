{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",

  "allowCorsOrigins": [
    "http://localhost:4200",
    "https://localhost:4200"
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.RollingFile", "Serilog.Sinks.Async" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": { "pathFormat": "Logs/log-{Date}.log" }
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "CoffeeContext": "Server=(localdb)\\mssqllocaldb;Database=Coffee.AspNetCore.NewDb;Trusted_Connection=True;ConnectRetryCount=0"
  }
}
